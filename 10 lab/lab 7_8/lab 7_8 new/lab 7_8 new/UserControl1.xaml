<UserControl x:Class="lab_7_8_new.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lab_7_8_new"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <local:DepProp Number="600" x:Key="Number"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource Number}">
        <TextBox HorizontalAlignment="Left" Height="24" Margin="90,6,0,0" TextWrapping="Wrap" Text="{Binding Number,Mode=TwoWay}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Check" HorizontalAlignment="Left" Margin="90,36,0,0" VerticalAlignment="Top" Width="120" Height="22" Click="Button_Click"/> 
    </Grid>
</UserControl>
